  background_color: string;
}

const block = Astro.props;
---

<section class="left-right" style={`background-color: #000000; color: #ffffff`}>
  <div class="content">
    <div class="text">
      <h2 style={`font-size: 96px; line-height: 108px; font-weight: 600;`}>
        What I do
      </h2>
      <p style={`font-size: 16px; line-height: 34px; letter-spacing: 0.1em;`}>
