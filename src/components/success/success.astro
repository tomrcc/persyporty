---
import MarkdownIt from 'markdown-it';
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
import Button from '../utility/button.astro';
const md = new MarkdownIt({ html: true });

interface Props {
  image_path: string;
  image_alt: string;
  description: string;
  button_text: string;
  button: {
    button_text: string;
    button_icon: string;
    button_link: string;
    background_color: string;
    hover_brightness: number;
    text_color: string;
  };
}
const block = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/**/*.{jpeg,jpg,png,gif,svg,webp}',
  { eager: true }
);

const imageSrc = images[block.image_path]?.default ?? block.image_path;
---

<section class="success xl:py-12 lg:py-9 py-10 sm:py-6">
  <div class="max-w-[1280px] mx-auto px-4">
    <div class="text-center flex flex-col items-center">
      <Image
        class="max-w-[250px]"
        alt={block.image_alt}
        widths={[320, 500, 640]}
        sizes={`(max-width: 640px) 320px, (max-width: 480px) 500px, (max-width: 1280px) 640px`}
        src={imageSrc}
      />
      <h3 class="my-5" set:html={md.render(block.description)} />
      {
        block.button.button_text ? (
          <div class="button">
            <Button
              button_link={block.button.button_link}
              button_text={block.button.button_text}
              background_color={block.button.background_color}
              text_color={block.button.text_color}
              button_icon={block.button.button_icon}
              hover_brightness={block.button.hover_brightness}
            />
          </div>
        ) : null
      }
    </div>
  </div>
</section>
