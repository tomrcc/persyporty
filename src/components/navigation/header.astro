---
import { header } from "../../../data/navigation.json";
---

<header
  class="header"
  x-data="{ open: false }"
  x-transition
  style={`background-color: ${header.background_color}; color: ${header.color};`}>
  <div class="header__container">
    <nav class="header__nav">
      <a class="header__logo-link" href="/">
        <img class="header__logo-image" src="/images/logo.svg" alt="Logo" />
      </a>
      <button class="hamburger" @click="open = ! open">
        <svg height="16" width="24" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <path
              d="M0 16h24v-2.667H0V16zm0-6.667h24V6.667H0v2.666zM0 0v2.667h24V0H0z"
              id="a">
            </path>
          </defs>
          <g fill="none" fill-rule="evenodd">
            <mask fill="#fff" id="b">
              <use href="#a"> </use>
            </mask>
            <use fill="#000" fill-rule="nonzero" href="#a"> </use>
            <g mask="url(#b)">
              <path d="M-4-8h32v32H-4z" fill="#705bef"> </path>
            </g>
          </g>
        </svg>
      </button>
      <ul
        class="header__nav-links"
        x-show="open"
        x-transition
        @click.outside="open = false">
        <li class="text-lg font-light tracking-wide">
          <a href="/#contact">Contact</a>
        </li>
        <li class="text-lg font-light tracking-wide">
          <a href="/blog/">Blog</a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .header__container {
    max-width: var(--pageContainer);
    margin: 0 auto;
    padding-inline: var(--pagePadding);
  }

  .header li {
    list-style-type: none;
  }

  .header__nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-block: 1rem;
    width: 100%;
  }

  .header__logo-image {
    width: 64px;
  }

  .header__nav-links {
    position: absolute;
    z-index: 99;
    background-color: white;
    right: 0;
    bottom: 0;
    top: 5rem;
    left: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 64px;
    padding: 16px;
  }
  .header__nav-link {
    cursor: pointer;
  }
  .header__nav-link:hover {
    color: #705bef;
  }

  @media screen and (min-width: 600px) {
    .header__nav-links {
      position: static;
      display: flex !important;
      flex-direction: row;
      justify-content: flex-end;
      padding: 0;
      min-width: none;
      background-color: transparent;
    }
  }

  @media screen and (min-width: 600px) {
    .header__nav-item {
      padding-left: 1rem;
    }
  }

  .hamburger {
    padding: 0.5rem;
    transform: translateX(0.5rem);
    border-radius: 4px;
    cursor: pointer;
  }

  .hamburger:hover {
    background-color: #e5ecfb;
  }

  @media screen and (min-width: 600px) {
    .hamburger {
      display: none;
    }
  }
</style>
