---
import Icon from "../utility/icon";

interface Props {}

const block = Astro.props;
---

<section>
  <div class="hero-container">
    <h1 class="flex flex-col overflow-y-hidden">Tom Richardson</h1>
    <p class="subheading">Web Developer</p>
  </div>
</section>

<style>
  section {
    max-width: var(--pageContainer);
    padding-inline: var(--pagePadding);
    margin: 0 auto;
    padding-top: 96px;
    padding-bottom: 96px;
    font-family: "Playfair Display", serif;

    display: flex;
    align-items: center;
  }

  .hero-container {
    display: grid;
    grid-template-columns: 1fr;
    align-items: center;
    justify-content: center;
    height: 100%;
    overflow-x: hidden;
  }
  h1 {
    font-size: clamp(2rem, 12vw, 12.5rem);
    line-height: clamp(2rem, 12vw, 12.5rem);
    font-weight: 400;
  }
  .subheading {
    margin-top: 64px;
    align-self: end;
    display: flex;
    gap: 0.1rem;
    margin-inline: 0;
    font-size: clamp(1.25rem, 8vw, 4rem);
    font-weight: 200;
  }
</style>
