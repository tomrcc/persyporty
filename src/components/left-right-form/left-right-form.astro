---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import Markdown from "../utility/markdown.astro";

interface Props {
  background_color: string;
}

const block = Astro.props;
---

<section class="left-right" style={`background-color: #7469B6;`}>
  <div class="content">
    <h2
      style={`font-size: 156px; line-height: 120px; font-weight: 500; color: #ffffff;`}>
      <span>Contact</span><span>Contact</span>
    </h2>
    <form
      class="form"
      style={`background-color: white;`}
      method="post"
      action="/success/index.html">
      <div class="form-group">
        <label for="name">Name </label>
        <input type="text" name="name" id="name" />
      </div>
      <div class="form-group">
        <label for="email">Email </label>
        <input type="email" name="email" id="email" required />
      </div>
      <div class="form-group message">
        <label for="message">Message </label>
        <textarea name="message" id="message" required></textarea>
      </div>
      <div class="form-group">
        <input class="px-4 py-2" type="submit" value="Send message" />
      </div>
    </form>
  </div>
</section>

<style>
  section {
    padding-block: 96px;
  }
  .content {
    max-width: var(--pageContainer);
    padding-inline: var(--pagePadding);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
  }
  h2 {
    width: 50%;
    display: flex;
    flex-direction: column;
    padding-block: 64px;
  }
  form {
    width: 50%;
    max-width: 28rem;
    padding-block: 64px;
    padding-inline: 48px;
    display: flex;
    flex-direction: column;
    gap: 16px;
    border-radius: 4px;
    box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    font-weight: 300;
  }
  .form-group {
    display: flex;
    flex-direction: column;
    letter-spacing: 0.125em;
    color: rgb(15, 15, 15);
  }
  .message {
    margin-block: 24px;
  }
  .form-group input,
  .form-group textarea {
    border: 1px solid rgb(201, 201, 201);
    border-radius: 2px;
    padding-inline: 0.25rem;
    padding-block: 0.125rem;
  }
  .form-group textarea {
    min-height: 20ch;
  }
</style>
